---
import "../../styles/modals.css";
import "../../styles/gameboard.css";
---

<div id="cascade-modal" class="modal">
    <div class="modal-content">
        <h1>CASCADE</h1>
        <p>Please select a card from level 2.</p>
        <p>Please select a card from level 1.</p>

        <div id="cascade-board" class="cascade-board">
            <div class="modal-board-cards"></div>
        </div>
        <div class="button-container">
            <button class="cascade-back-btn" id="cascade-back-btn">BACK</button>
            <button class="cascade-confirm-btn" id="cascade-confirm-btn">CONFIRM</button>
        </div>
    </div>
</div>