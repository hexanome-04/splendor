<template id="deck-to-slot">
    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <img src="/images/BlueCard.jpg">
            </div>
            <div class="flip-card-back">
                <img src="/images/development-cards/074.jpg">
            </div>
        </div>
    </div>
</template>
<script src="../../scripts/animation/cards.ts"></script>
<style is:global>
    /* So that we can set it using javascript */
    .flip-card-inner.flip {
        transform: rotateY(180deg);
    }
</style>
<style>
    .flip-card {
        background-color: transparent;
        width: 300px;
        height: 300px;
        perspective: 1000px;
        border-radius: var(--card-border-radius);
        z-index: 1;
    }

    .flip-card img {
        border-radius: var(--card-border-radius);
        box-shadow: rgba(0, 0, 0, 0.9) -3px 2px 6px -1px;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.7s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        display: flex;
    }

    .flip-card-front {
        display: flex;
    }

    .flip-card-back {
        transform: rotateY(180deg);
    }
</style>