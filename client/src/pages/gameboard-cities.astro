---
import "../styles/gameboard.css";
import "../styles/gameboard-otherplayers.css";
import "../styles/cities/cities-gameboard.css";
import "../styles/modals.css";
import TakeTurnModal from "../components/modals/TakeTurnModal.astro";
import TakeTokenModal from "../components/modals/TakeTokenModal.astro";
import PutBackTokenModal from "../components/modals/PutBackTokenModal.astro";
import BuyCardModal from "../components/modals/BuyCardModal.astro";
import ReserveCardModal from "../components/modals/ReserveCardModal.astro";
import CascadeModal from "../components/modals/CascadeModal.astro";
import SaveGameModal from "../components/modals/SaveGameModal.astro";
import GameNavMenu from "../components/GameNavMenu.astro";
import ChooseSatchelModal from "../components/modals/ChooseSatchelModal.astro";
import ReserveNobleModal from "../components/modals/ReserveNobleModal.astro";
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Splendor | Cities</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/md5.min.js"></script>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet"> 
        <script src="../scripts/game-components.js"></script>
    </head>

    <body>
        <GameNavMenu title=" Splendor "></GameNavMenu>
        <div id="game-elements" class="game-elements">
            <div id="player-inventory" class="player-inventory">
                <div class="player-inventory-container">
                    <div class="player-prestige-points-container">
                        <span>0</span>
                    </div>
                    <div class="player-inventory-tokens">
                        <!-- RED -->
                        <div class="bonus-container">
                            <div class="bonus-icon">
                                <span>0</span>
                            </div>
                            <board-token color="red"></board-token>
                        </div>

                        <!-- BLUE -->
                        <div class="bonus-container">
                            <div class="bonus-icon">
                                <span>0</span>
                            </div>
                            <board-token color="blue"></board-token>
                        </div>

                        <!-- GREEN -->
                        <div class="bonus-container">
                            <div class="bonus-icon">
                                <span>0</span>
                            </div>
                            <board-token color="green"></board-token>
                        </div>

                        <!-- WHITE -->
                        <div class="bonus-container">
                            <div class="bonus-icon">
                                <span>0</span>
                            </div>
                            <board-token color="white"></board-token>
                        </div>

                        <!-- BROWN -->
                        <div class="bonus-container">
                            <div class="bonus-icon">
                                <span>0</span>
                            </div>
                            <board-token color="brown"></board-token>
                        </div>

                        <!-- GOLD -->
                        <div class="bonus-container">
                            <div class="bonus-icon">
                                <span>0</span>
                            </div>
                            <board-token color="gold"></board-token>
                        </div>
                    </div>
                    <div class="player-inventory-cards">
                        <div class="player-inventory-card-placeholder">
                            <img>
                        </div>
                        <div class="player-inventory-card-drawer">
                        </div>
                    </div>
                    <div class="player-inventory-reservedcards">
                    </div>
                    <div class="player-inventory-nobles"></div>
                    <div class="player-inventory-reserved-nobles"></div>
                    <div class="player-inventory-cities"></div>
                </div>
            </div>

            <div class="board-container">
                <!-- CITIES -->
                <div class="cities-container">
                    <div class="city-card">
                        <img>
                    </div>
                    <div class="city-card">
                        <img>
                    </div>
                    <div class="city-card">
                        <img>
                    </div>
                </div>

                <!-- BOARD CARDS -->
                <div id="board" class="board">
                    <div class="board-tokens">
                        <board-token color="red"></board-token>
                        <board-token color="blue"></board-token>
                        <board-token color="green"></board-token>
                        <board-token color="white"></board-token>
                        <board-token color="brown"></board-token>
                        <board-token color="gold"></board-token>
                    </div>
                    <div class="board-nobles">
                        <div class="noble-card">
                            <img>
                        </div>
                        <div class="noble-card">
                            <img>
                        </div>
                        <div class="noble-card">
                            <img>
                        </div>
                        <div class="noble-card">
                            <img>
                        </div>
                        <div class="noble-card">
                            <img>
                        </div>
                    </div>
                    <div class="board-cards">
                        <div class="board-cards-row board-cards-level3">
                            <div class="board-cards-dev-deck">
                                <img src="/images/BlueCard.jpg">
                            </div>
                            <div class="board-cards-dev-selectable">
                                <div class="board-card-dev">
                                    <!-- Replace with <img> when ready -->
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev board-card-dev-orient">
                                    <img>
                                </div>
                                <div class="board-card-dev board-card-dev-orient">
                                    <img>
                                </div>
                            </div>
                            <div class="board-cards-dev-deck-orient">
                                <img src="/images/RedCardThree.jpg">
                            </div>
                        </div>
                        <div class="board-cards-row board-cards-level2">
                            <div class="board-cards-dev-deck">
                                <img src="/images/YellowCard.jpg">
                            </div>
                            <div class="board-cards-dev-selectable">
                                <div class="board-card-dev">
                                    <!-- Replace with <img> when ready -->
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev board-card-dev-orient">
                                    <img>
                                </div>
                                <div class="board-card-dev board-card-dev-orient">
                                    <img>
                                </div>
                            </div>
                            <div class="board-cards-dev-deck-orient">
                                <img src="/images/RedCardTwo.jpg">
                            </div>
                        </div>
                        <div class="board-cards-row board-cards-level1">
                            <div class="board-cards-dev-deck">
                                <img src="/images/GreenCard.jpg">
                            </div>
                            <div class="board-cards-dev-selectable">
                                <div class="board-card-dev">
                                    <!-- Replace with <img> when ready -->
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev">
                                    <img>
                                </div>
                                <div class="board-card-dev board-card-dev-orient">
                                    <img>
                                </div>
                                <div class="board-card-dev board-card-dev-orient">
                                    <img>
                                </div>
                            </div>
                            <div class="board-cards-dev-deck-orient">
                                <img src="/images/RedCardOne.jpg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="other-players" class="other-players"></div>
        </div>

        <!-- MODALS -->
        <TakeTurnModal></TakeTurnModal>
        <TakeTokenModal></TakeTokenModal>
        <PutBackTokenModal></PutBackTokenModal>
        <BuyCardModal></BuyCardModal>
        <ReserveCardModal></ReserveCardModal>
        <SaveGameModal></SaveGameModal>
        <CascadeModal></CascadeModal>
        <ChooseSatchelModal></ChooseSatchelModal>
        <ReserveNobleModal></ReserveNobleModal>

        <!-- Templates to be used throughout the game -->
        <template id="board-card-dev-template" card-id>
            <div class="board-card-dev">
                <img>
            </div>
        </template>

        <template id="development-card-template">
            <div class="player-inventory-card" card-id cost>
                <img src="./images/G-G-2-1-0-0-2-0.jpg">
            </div>
        </template>

        <template id="player-inventory-reserved-card-template">
            <div class="player-inventory-card-reserved">
                <img src="./images/G-G-2-1-0-0-2-0.jpg">
            </div>
        </template>

        <template id="noble-card-template">
            <div class="noble-card" card-id>
                <img src="">
            </div>
        </template>

        <template id="city-card-template">
            <div class="city-card" card-id>
                <img src="">
            </div>
        </template>

        <template id="dev-card-template">

        </template>

        <template id="other-player-tab-template">
            <div class="other-player">
                <div class="other-player-container">
                    <div class="other-prestige-point-container">
                        <span>15</span>
                    </div>
                    <div class="other-player-profile">
                        <img>
                        <div class="op-name-container">
                            <p class="other-player-name">NAME</p>
                        </div>
                    </div>
                    <div class="other-player-inventory">
                        <div class="other-player-tokens">
                            <!-- RED -->
                            <div class="bonus-container">
                                <div class="bonus-icon">
                                    <span>0</span>
                                </div>
                                <board-token color="red"></board-token>
                            </div>

                            <!-- BLUE -->
                            <div class="bonus-container">
                                <div class="bonus-icon">
                                    <span>0</span>
                                </div>
                                <board-token color="blue"></board-token>
                            </div>

                            <!-- GREEN -->
                            <div class="bonus-container">
                                <div class="bonus-icon">
                                    <span>0</span>
                                </div>
                                <board-token color="green"></board-token>
                            </div>

                            <!-- WHITE -->
                            <div class="bonus-container">
                                <div class="bonus-icon">
                                    <span>0</span>
                                </div>
                                <board-token color="white"></board-token>
                            </div>

                            <!-- BROWN -->
                            <div class="bonus-container">
                                <div class="bonus-icon">
                                    <span>0</span>
                                </div>
                                <board-token color="brown"></board-token>
                            </div>

                            <!-- GOLD -->
                            <div class="bonus-container">
                                <div class="bonus-icon">
                                    <span>0</span>
                                </div>
                                <board-token color="gold"></board-token>
                            </div>
                        </div>
                        <div class="other-inventory-cards">
                            <!-- The following cards have to be put in reverse order -->
                        </div>
                        <div class="other-inventory-cards-reserved">
                            <!-- The following cards have to be put in reverse order -->
                        </div>
                        <div class="other-inventory-noble-cards">
                            <!-- The following cards have to be put in reverse order -->
                        </div>
                        <div class="other-inventory-reserved-noble-cards">
                            <!-- The following cards have to be put in reverse order -->
                        </div>
                        <div class="other-inventory-cities">
                            <!-- The following cards have to be put in reverse order -->
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="other-player-dev-card-template">
            <div class="other-inventory-card">
                <img src="./images/G-G-2-1-0-0-2-0.jpg">
            </div>
        </template>

        <template id="other-player-reserved-card-template">
            <div class="other-inventory-card-reserved">
                <img src="./images/G-G-2-1-0-0-2-0.jpg">
            </div>
        </template>

        <script src="../scripts/game.js"></script>
        <script src="../scripts/game-cities.js"></script>
        <script src="../scripts/modals/modals.js"></script>

    </body>
</html>